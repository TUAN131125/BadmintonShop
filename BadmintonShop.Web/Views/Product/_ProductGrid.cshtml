@using BadmintonShop.Web.ViewModels.Store
@model IEnumerable<ProductItemViewModel>

<section class="section-card p-4 elevated h-100">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="title-accent mb-0">Product List</h5>
        <span class="text-muted small">Found @(Model?.Count() ?? 0) products</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-6 col-md-4 col-lg-4">
                    <partial name="_ProductCard" model="item" />
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-box-seam fs-1 d-block mb-3"></i>
            <p>No products found matching your selection.</p>
        </div>
    }
</section>