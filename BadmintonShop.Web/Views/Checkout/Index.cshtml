@model BadmintonShop.Web.ViewModels.CheckoutVM

@{
    Layout = "~/Views/Shared/_Layout.Store.cshtml";
    ViewData["Title"] = "Secure Checkout";
}

<div class="container py-5">
    <h3 class="fw-bold mb-4 title-accent">Secure Checkout</h3>

    <form asp-action="PlaceOrder" method="post">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mb-4">
                <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Please fix the following errors:</h5>
                <ul class="mb-0 ps-3">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <div class="row g-4">
            <div class="col-lg-7">
                <div class="section-card elevated p-4 mb-4">
                    <h5 class="fw-bold mb-3">Shipping Information</h5>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-semibold">Receiver Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="e.g. Nguyen Van A" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-semibold">Phone Number</label>
                        <input asp-for="Phone" class="form-control" placeholder="e.g. 090xxxxxxx" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label fw-semibold">City / Province</label>
                            <input asp-for="City" class="form-control" placeholder="e.g. Ha Noi" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Ward" class="form-label fw-semibold">Ward / Commune</label>
                            <input asp-for="Ward" class="form-control" placeholder="e.g. Ward 12" />
                            <span asp-validation-for="Ward" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SpecificAddress" class="form-label fw-semibold">Specific Address (House No, Street)</label>
                        <input asp-for="SpecificAddress" class="form-control" placeholder="e.g. 123 Nguyen Trai Street" />
                        <span asp-validation-for="SpecificAddress" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Note" class="form-label fw-semibold">Order Note (Optional)</label>
                        <textarea asp-for="Note" class="form-control" rows="2" placeholder="Any special requests for delivery..."></textarea>
                    </div>
                </div>

                <div class="section-card elevated p-4">
                    <h5 class="fw-bold mb-3">Payment Method</h5>
                    <div class="payment-options d-flex flex-column gap-3">
                        <label class="payment-option border rounded p-3 d-flex align-items-center cursor-pointer">
                            <input class="form-check-input me-3" type="radio" asp-for="PaymentMethod" value="COD" checked id="payCOD">
                            <div class="flex-grow-1">
                                <span class="fw-bold d-block">Cash on Delivery (COD)</span>
                                <small class="text-muted">Pay with cash upon delivery.</small>
                            </div>
                            <i class="bi bi-cash-stack fs-3 text-success"></i>
                        </label>

                        <label class="payment-option border rounded p-3 d-flex align-items-center cursor-pointer">
                            <input class="form-check-input me-3" type="radio" asp-for="PaymentMethod" value="PAYPAL" id="payPaypal">
                            <div class="flex-grow-1">
                                <span class="fw-bold d-block">PayPal / Credit Card</span>
                                <small class="text-muted">Safe payment via PayPal gateway.</small>
                            </div>
                            <i class="bi bi-paypal fs-3 text-primary"></i>
                        </label>
                    </div>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="section-card elevated p-4 sticky-top" style="top: 100px; z-index: 1;">
                    <h5 class="fw-bold mb-3">Order Summary</h5>

                    <div class="checkout-items mb-3" style="max-height: 300px; overflow-y: auto;">
                        @if (Model.CartItems != null)
                        {
                            foreach (var item in Model.CartItems)
                            {
                                <div class="d-flex align-items-center mb-3 border-bottom pb-3">
                                    <div class="position-relative me-3">
                                        <img src="@item.ImageUrl" width="60" height="60" class="rounded border object-fit-cover" />
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">
                                            @item.Quantity
                                        </span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 text-truncate" style="max-width: 180px;">@item.ProductName</h6>
                                        <small class="text-muted">@item.Price.ToString("N0") VND</small>
                                    </div>
                                    <div class="fw-bold text-end">
                                        @((item.Price * item.Quantity).ToString("N0"))
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-bold">@Model.GrandTotal.ToString("N0") VND</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Shipping Fee</span>
                        <span class="text-success">Free Shipping</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fs-5 fw-bold">Total</span>
                        <span class="fs-4 fw-bold text-primary">@Model.GrandTotal.ToString("N0") VND</span>
                    </div>

                    <button type="submit" class="btn btn-primary-store w-100 btn-lg py-3 shadow-sm fw-bold">
                        PLACE ORDER
                    </button>

                    <div class="text-center mt-3 small text-muted">
                        <i class="bi bi-shield-lock-fill me-1"></i> Your data is processed securely.
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // JS to highlight selected payment method
        document.querySelectorAll('input[name="PaymentMethod"]').forEach((input) => {
            input.addEventListener('change', function() {
                document.querySelectorAll('.payment-option').forEach(el => {
                    el.classList.remove('border-primary', 'bg-light');
                });
                if(this.checked) {
                    this.closest('label').classList.add('border-primary', 'bg-light');
                }
            });
        });
        document.querySelector('input[name="PaymentMethod"]:checked')?.dispatchEvent(new Event('change'));
    </script>
}