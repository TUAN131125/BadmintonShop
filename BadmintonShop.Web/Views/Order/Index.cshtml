@using BadmintonShop.Core.Enums
@model IEnumerable<BadmintonShop.Web.ViewModels.Order.OrderHistoryVM>

@{
    Layout = "~/Views/Shared/_Layout.Store.cshtml";
    ViewData["Title"] = "Order History";
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold text-uppercase">My Order History</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p class="mb-3">You have no orders yet.</p>
            <a href="/" class="btn btn-primary">Shop Now</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="bg-light text-dark">
                            <tr>
                                <th class="py-3 ps-4">Order ID</th>
                                <th class="py-3">Date</th>
                                <th class="py-3">Total</th>
                                <th class="py-3">Status</th>
                                <th class="py-3 text-end pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@item.Id</td>
                                    <td>@item.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td class="fw-bold text-danger">@item.TotalAmount.ToString("N0") ₫</td>
                                    <td>
                                        @if (item.Status == OrderStatus.Pending)
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                        else if (item.Status == OrderStatus.AwaitingPayment)
                                        {
                                            <span class="badge bg-warning text-dark">Awaiting Payment</span>
                                        }
                                        else if (item.Status == OrderStatus.Paid)
                                        {
                                            <span class="badge bg-success">Paid</span>
                                        }
                                        else if (item.Status == OrderStatus.Shipping)
                                        {
                                            <span class="badge bg-info text-dark">Shipping</span>
                                        }
                                        else if (item.Status == OrderStatus.Completed)
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else if (item.Status == OrderStatus.Cancelled)
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>