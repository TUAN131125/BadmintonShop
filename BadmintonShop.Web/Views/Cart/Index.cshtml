@model List<BadmintonShop.Web.ViewModels.Cart.CartItemViewModel>

@{
    Layout = "~/Views/Shared/_Layout.Store.cshtml";
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4 border-bottom pb-2">
        <h3 class="fw-bold mb-0 text-dark">
            <i class="bi bi-cart3 me-2 text-primary"></i>Shopping Cart
        </h3>
        <span class="badge bg-primary rounded-pill ms-3">@Model.Count items</span>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border border-dashed">
            <div class="mb-4">
                <i class="bi bi-cart-x display-1 text-muted opacity-25"></i>
            </div>
            <h3 class="fw-bold text-secondary">Your cart is empty</h3>
            <p class="text-muted mb-4">You haven't added any products yet.</p>
            <a href="/Product" class="btn btn-primary-store px-4 py-2 shadow-sm">
                <i class="bi bi-arrow-left me-2"></i> Continue Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="table-responsive cart-table p-0 overflow-hidden">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="py-3 ps-4 text-uppercase text-secondary" style="font-size: 0.85rem;">Product</th>
                                <th class="py-3 text-center text-uppercase text-secondary" style="font-size: 0.85rem;">Quantity</th>
                                <th class="py-3 text-end text-uppercase text-secondary" style="font-size: 0.85rem;">Total</th>
                                <th class="py-3 text-end pe-4 text-uppercase text-secondary" style="font-size: 0.85rem;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 py-4">
                                        <div class="d-flex align-items-center">
                                            <a href="/Product/Detail/@item.ProductId">
                                                <img src="@item.ImageUrl" alt="@item.ProductName"
                                                     class="rounded-3 border me-3"
                                                     style="width: 70px; height: 70px; object-fit: cover;" />
                                            </a>
                                            <div>
                                                <h6 class="mb-1">
                                                    <a href="/Product/Detail/@item.ProductId" class="text-decoration-none text-dark cart-product-name">
                                                        @item.ProductName
                                                    </a>
                                                </h6>
                                                <span class="cart-price small">
                                                    @item.Price.ToString("N0") ₫
                                                </span>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="text-center py-4">
                                        <form asp-controller="Cart" asp-action="Update" method="post" class="d-flex justify-content-center align-items-center gap-2">
                                            <input type="hidden" name="id" value="@item.VariantId" />

                                            <input type="number" name="quantity" value="@item.Quantity" min="1" max="99"
                                                   class="form-control form-control-sm text-center fw-bold text-dark"
                                                   style="width: 60px;" />

                                            <button type="submit" class="btn btn-sm cart-update-btn shadow-sm" title="Update Quantity">
                                                <i class="bi bi-arrow-clockwise"></i>
                                            </button>
                                        </form>
                                    </td>

                                    <td class="text-end py-4">
                                        <span class="cart-total fs-6">
                                            @((item.Price * item.Quantity).ToString("N0")) ₫
                                        </span>
                                    </td>

                                    <td class="text-end pe-4 py-4">
                                        <form asp-controller="Cart" asp-action="Remove" method="post">
                                            <input type="hidden" name="id" value="@item.VariantId" />
                                            <button type="submit" class="btn btn-link p-0 border-0 cart-remove text-decoration-none"
                                                    onclick="return confirm('Are you sure you want to remove this item?');"
                                                    title="Remove Item">
                                                <i class="bi bi-trash3-fill fs-5"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-4">
                    <a href="/Product" class="text-decoration-none text-secondary fw-bold d-inline-flex align-items-center hover-primary">
                        <i class="bi bi-arrow-left me-2"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="section-card elevated p-4 bg-white sticky-top" style="top: 100px; z-index: 1;">
                    <h5 class="fw-bold mb-4 text-dark border-bottom pb-2">Order Summary</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-bold text-dark">@Model.Sum(x => x.Price * x.Quantity).ToString("N0") ₫</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted">Shipping</span>
                        <span class="text-success small fw-bold bg-success bg-opacity-10 px-2 rounded">Calculated at checkout</span>
                    </div>

                    <hr class="text-muted opacity-25" />

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fw-bold fs-5 text-dark">Total</span>
                        <span class="cart-total fs-3">
                            @Model.Sum(x => x.Price * x.Quantity).ToString("N0") ₫
                        </span>
                    </div>

                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary-store w-100 py-3 shadow-sm text-uppercase">
                        Proceed to Checkout <i class="bi bi-arrow-right ms-2"></i>
                    </a>

                    <div class="mt-4 text-center">
                        <small class="text-muted d-block mb-2">We accept</small>
                        <div class="text-secondary fs-4 d-flex justify-content-center gap-3 opacity-75">
                            <i class="bi bi-credit-card-2-front"></i>
                            <i class="bi bi-paypal"></i>
                            <i class="bi bi-bank"></i>
                        </div>
                        <div class="mt-3 small text-success">
                            <i class="bi bi-shield-lock-fill me-1"></i> 100% Secure Transaction
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>