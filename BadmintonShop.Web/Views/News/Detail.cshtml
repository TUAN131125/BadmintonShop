@using BadmintonShop.Web.ViewModels.News
@model NewsDetailVM

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.Store.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">

            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">News</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
            </nav>

            <div class="text-center mb-5">
                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2 mb-3">Blog</span>
                <h1 class="fw-bold display-5 text-dark mb-3">@Model.Title</h1>

                <div class="text-muted small">
                    <span class="me-3"><i class="bi bi-person-circle me-1"></i> @Model.Author</span>
                    <span><i class="bi bi-calendar-event me-1"></i> @Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                </div>
            </div>

            <div class="mb-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-3 w-100 shadow-sm" alt="@Model.Title" />
            </div>

            <article class="lh-lg fs-5 mb-5 text-break">
                @Html.Raw(Model.Content)
            </article>

            <hr class="my-5 opacity-25" />

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center bg-light p-4 rounded-3 border">
                <div class="mb-3 mb-md-0">
                    <h6 class="fw-bold mb-1">Share this article</h6>
                    <small class="text-muted">Spread the knowledge with your friends</small>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary btn-sm rounded-circle"><i class="bi bi-facebook"></i></button>
                    <button class="btn btn-outline-info btn-sm rounded-circle"><i class="bi bi-twitter"></i></button>
                    <button class="btn btn-outline-secondary btn-sm rounded-circle"><i class="bi bi-link-45deg"></i></button>
                </div>
            </div>

            <div class="text-center mt-5">
                <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-5">
                    <i class="bi bi-arrow-left me-2"></i> Back to News
                </a>
            </div>

        </div>
    </div>
</div>