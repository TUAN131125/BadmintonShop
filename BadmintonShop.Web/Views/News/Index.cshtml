@using BadmintonShop.Web.ViewModels.News
@model IEnumerable<NewsItemVM>

@{
    ViewData["Title"] = "Latest News";
    // Sử dụng Layout Store như yêu cầu
    Layout = "~/Views/Shared/_Layout.Store.cshtml";
}

<div class="bg-light py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-5 fw-bold text-dark">Latest News</h1>
        <p class="lead text-muted mb-0">Updates, guides, and stories from our team</p>
    </div>
</div>

<div class="container mb-5">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-journal-x text-muted fs-1"></i>
            </div>
            <h4 class="text-muted">No news available.</h4>
            <div class="mt-3">
                <a href="/" class="btn btn-primary rounded-pill px-4">Back to Home</a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-3">
                        <a asp-action="Detail" asp-route-id="@item.Id">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 220px; object-fit: cover;">
                        </a>

                        <div class="card-body d-flex flex-column p-4">
                            <div class="text-primary small fw-bold text-uppercase mb-2">
                                <i class="bi bi-calendar3 me-1"></i> @item.CreatedAt.ToString("MMM dd, yyyy")
                            </div>

                            <h5 class="card-title fw-bold mb-3">
                                <a asp-action="Detail" asp-route-id="@item.Id" class="text-dark text-decoration-none">
                                    @item.Title
                                </a>
                            </h5>

                            <p class="card-text text-secondary mb-4 flex-grow-1">
                                @item.ShortDescription
                            </p>

                            <div class="mt-auto pt-3 border-top">
                                <a asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none fw-bold small text-uppercase">
                                    Read Article <i class="bi bi-arrow-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>