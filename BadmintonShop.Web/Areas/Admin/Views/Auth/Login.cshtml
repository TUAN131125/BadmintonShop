@model BadmintonShop.Web.Areas.Admin.ViewModels.LoginVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - BadmintonShop</title>
    <link rel="stylesheet" href="~/css/admin-login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>

<body>

    <div class="login-card">

        <div class="text-center mb-4">
            <span class="brand">Badminton Admin</span>
        </div>

        <div class="login-title">Welcome Back</div>
        <div class="login-sub">Please enter your credentials to continue.</div>

        <form asp-area="Admin"
              asp-controller="Auth"
              asp-action="Login"
              method="post">

            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label fw-bold">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            </div>

            <div class="mb-2">
                <label class="form-label fw-bold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <div asp-validation-summary="All" class="my-3"></div>

            <button type="submit" class="btn btn-primary btn-login">
                Login
            </button>
        </form>

    </div>

</body>
</html>