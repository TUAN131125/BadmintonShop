@model IEnumerable<BadmintonShop.Core.Entities.News>

@{
    ViewData["Title"] = "News Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4 fw-bold text-secondary text-uppercase fs-4">News Management</h1>

    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <div class="h5 mb-0 text-primary fw-bold">
                <i class="fas fa-newspaper me-2"></i> News List
            </div>
            <a asp-action="Create" class="btn btn-primary btn-sm px-3 rounded-pill shadow-sm">
                <i class="fas fa-plus me-1"></i> Create New
            </a>
        </div>
        <div class="card-body p-0">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success m-3 rounded-3 shadow-sm border-0">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="text-center py-3" style="width: 60px;">ID</th>
                            <th style="width: 120px;">Thumbnail</th>
                            <th>Title</th>
                            <th class="text-center">Status</th>
                            <th>Created Date</th>
                            <th class="text-center" style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center text-muted fw-bold">#@item.Id</td>
                                <td>
                                    <img src="@item.ImageUrl" class="rounded shadow-sm border" style="width: 80px; height: 50px; object-fit: cover;" alt="Thumbnail" />
                                </td>
                                <td class="fw-bold text-dark">@item.Title</td>
                                <td class="text-center">
                                    @if (item.IsPublished)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3 py-2">Draft</span>
                                    }
                                </td>
                                <td class="text-secondary small">@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm shadow-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" title="Delete" onclick="if(confirm('Are you sure you want to delete this news?')) { document.getElementById('delete-form-@item.Id').submit(); }">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                    <form id="delete-form-@item.Id" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-none"></form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>