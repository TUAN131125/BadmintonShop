@model BadmintonShop.Web.ViewModels.News.NewsCreateUpdateVM

@{
    ViewData["Title"] = "Create News";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex align-items-center justify-content-between mt-4 mb-4">
        <h1 class="fw-bold text-secondary fs-4 mb-0 text-uppercase">Create New Post</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold text-dark">Title <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter news title..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ShortDescription" class="form-label fw-bold text-dark">Short Description</label>
                            <textarea asp-for="ShortDescription" class="form-control bg-light" rows="3" placeholder="Enter short description..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold text-dark">Content <span class="text-danger">*</span></label>
                            <textarea asp-for="Content" class="form-control" rows="12" placeholder="Write content here..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 rounded-3 mb-4 sticky-top" style="top: 20px;">
                    <div class="card-header bg-light py-3 border-0">
                        <h6 class="m-0 fw-bold text-primary">Settings</h6>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-bold">Thumbnail Image</label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <div class="form-text small">Max 2MB, JPG/PNG format.</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold d-block">Status</label>
                            <div class="form-check form-switch ps-0">
                                <input asp-for="IsPublished" class="form-check-input ms-0 me-2" type="checkbox" role="switch" id="publishSwitch" checked style="cursor: pointer;">
                                <label class="form-check-label pt-1" for="publishSwitch" style="cursor: pointer;">Publish Immediately</label>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25">

                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold shadow-sm">
                            <i class="fas fa-save me-2"></i> SAVE POST
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>