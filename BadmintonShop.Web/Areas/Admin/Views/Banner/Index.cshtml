@using BadmintonShop.Core.Entities
@model IEnumerable<Banner>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="Create" class="btn btn-primary mb-2">Create Banner</a>

<table class="table table-bordered align-middle">
    <thead>
        <tr>
            <th>Order</th>
            <th>Preview</th>
            <th>Title</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.OrderIndex</td>
                <td>
                    <img src="@b.ImageUrl" height="60" style="object-fit:cover" />
                </td>
                <td>@b.Title</td>
                <td>
                    <span class="badge @(b.IsActive ? "bg-success" : "bg-secondary")">
                        @(b.IsActive ? "Active" : "Inactive")
                    </span>
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Toggle" asp-route-id="@b.Id" class="btn btn-sm btn-secondary">Toggle</a>

                    <form asp-action="Delete" asp-route-id="@b.Id" method="post" class="d-inline"
                          onsubmit="return confirm('Delete banner?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>