@model IEnumerable<BadmintonShop.Web.Areas.Admin.ViewModels.OrderListVM>
@using BadmintonShop.Core.Enums

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>
            <i class="fa-solid fa-receipt"></i> Orders
        </span>
    </div>

    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:80px;">#</th>
                    <th>User</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th style="width:120px;">Action</th>
                </tr>
            </thead>

            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            No orders found
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var o in Model)
                    {
                        <tr>
                            <td class="fw-semibold">#@o.Id</td>
                            <td>User @o.UserId</td>

                            <td class="fw-semibold text-success">
                                @o.TotalAmount.ToString("N0") ₫
                            </td>

                            <td>
                                @if (o.Status == OrderStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (o.Status == OrderStatus.Shipping)
                                {
                                    <span class="badge bg-primary">Shipping</span>
                                }
                                else if (o.Status == OrderStatus.Completed)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (o.Status == OrderStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                            </td>

                            <td>
                                @o.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </td>

                            <td>
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Detail"
                                   asp-route-id="@o.Id">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
