@model IEnumerable<BadmintonShop.Web.Areas.Admin.ViewModels.ProductVariantVM>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Variant Management";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center py-3 bg-white">
        <h5 class="mb-0 text-primary">
            <i class="fa fa-layer-group"></i> Variants for: <strong>@ViewBag.ProductName</strong>
        </h5>

        <div>
            <a class="btn btn-secondary btn-sm" asp-controller="Product" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Back to Products
            </a>
            <a class="btn btn-primary btn-sm" asp-action="Create" asp-route-productId="@ViewBag.ProductId">
                <i class="fa fa-plus"></i> Add Variant
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Status</th>
                        <th>SKU</th>
                        <th>Attribute</th>
                        <th>Price</th>
                        <th>Stock / Cost</th>
                        <th class="text-end" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var v in Model)
                        {
                            // Highlight row nếu Ngừng kinh doanh
                            var rowClass = v.IsActive ? "" : "table-secondary opacity-75";

                            <tr class="@rowClass">
                                <td>
                                    @if (v.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td><span class="badge bg-light text-dark border">@v.SKU</span></td>
                                <td>
                                    <strong>@v.AttributeName:</strong> @v.AttributeValue
                                </td>
                                <td class="fw-bold text-primary">@v.Price.ToString("N0") ₫</td>
                                <td>
                                    @if (v.Stock <= 5) // Giả định mức cảnh báo chung là 5
                                    {
                                        <span class="text-danger fw-bold"><i class="fa fa-exclamation-triangle"></i> Low: @v.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="text-success fw-bold">@v.Stock</span>
                                    }
                                    <div class="small text-muted">Cost: @v.ImportPrice.ToString("N0") ₫</div>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="AdjustStock" asp-route-variantId="@v.Id" class="btn btn-sm btn-outline-warning" title="Stocktake / Adjust">
                                            <i class="fa fa-clipboard-check"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fa fa-pencil-alt"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@v.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Do you want to deactivate/delete this variant?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Deactivate">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fa fa-info-circle fa-2x mb-3"></i><br />
                                No variants found. Click <strong>"Add Variant"</strong> to create one.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>