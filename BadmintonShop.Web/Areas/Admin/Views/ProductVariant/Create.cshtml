@model BadmintonShop.Web.Areas.Admin.ViewModels.ProductVariantVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Variant";
}

<div class="container-fluid px-0" style="max-width: 800px;">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-primary">Add New Variant</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ProductId" />

                <div class="mb-4">
                    <label class="form-label fw-bold">SKU (Stock Keeping Unit)</label>
                    <input asp-for="SKU" class="form-control" placeholder="Auto-generated if empty" />
                    <span asp-validation-for="SKU" class="text-danger small"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Attribute Name</label>
                        <input asp-for="AttributeName" class="form-control" placeholder="e.g. Weight, Color" />
                        <span asp-validation-for="AttributeName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Attribute Value</label>
                        <input asp-for="AttributeValue" class="form-control" placeholder="e.g. 4U, Red" />
                        <span asp-validation-for="AttributeValue" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4 text-secondary" />
                <h6 class="fw-bold text-success mb-3"><i class="fa fa-boxes"></i> Initial Stock & Pricing</h6>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Selling Price (VND)</label>
                        <div class="input-group">
                            <span class="input-group-text">₫</span>
                            <input asp-for="Price" type="number" class="form-control" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Initial Import Price (Giá Vốn)</label>
                        <div class="input-group">
                            <span class="input-group-text">₫</span>
                            <input asp-for="ImportPrice" type="number" class="form-control" placeholder="0" />
                        </div>
                        <div class="form-text small">Used to calculate Average Cost.</div>
                        <span asp-validation-for="ImportPrice" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Initial Quantity (Số lượng đầu kỳ)</label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="0" />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2 pt-3 border-top">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-save me-2"></i> Create & Initialize Stock
                    </button>
                    <a asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-secondary px-4">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div></div>