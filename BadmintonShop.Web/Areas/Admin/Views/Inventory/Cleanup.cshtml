@model IEnumerable<BadmintonShop.Web.Areas.Admin.ViewModels.InventoryIndexVM>
@{
    ViewData["Title"] = "Dọn dẹp kho (Cleanup)";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-danger mb-1"><i class="fa fa-trash-alt me-2"></i>Dọn dẹp kho</h2>
            <p class="text-muted small mb-0">
                Các sản phẩm dưới đây đã bị xóa (Soft Deleted) nhưng vẫn còn dữ liệu tồn kho.
                <br /><strong class="text-danger">Cảnh báo:</strong> Hành động này sẽ xóa vĩnh viễn lịch sử nhập xuất của chúng.
            </p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm border-danger">
        <div class="card-body p-0">
            <form asp-action="CleanupConfirmed" method="post" id="cleanupForm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-danger">
                            <tr>
                                <th class="ps-4" style="width: 50px;">
                                    <input type="checkbox" id="selectAll" class="form-check-input" />
                                </th>
                                <th>Product Info</th>
                                <th>SKU</th>
                                <th>Leftover Stock</th>
                                <th class="text-end pe-4">Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fa fa-check-circle fa-3x text-success mb-3"></i>
                                        <p>Kho sạch sẽ! Không có dữ liệu rác.</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <input type="checkbox" name="selectedIds" value="@item.Id" class="form-check-input item-check" />
                                        </td>
                                        <td class="fw-bold text-muted text-decoration-line-through">
                                            @item.ProductName
                                            <div class="small fw-normal">@item.AttributeName: @item.AttributeValue</div>
                                        </td>
                                        <td><span class="badge bg-secondary">@item.SKU</span></td>
                                        <td class="fw-bold text-danger">@item.Quantity</td>
                                        <td class="text-end pe-4">@item.AverageCost.ToString("N0") ₫</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Any())
                {
                    <div class="p-3 border-top bg-light text-end">
                        <button type="submit" class="btn btn-danger fw-bold" onclick="return confirm('Bạn có chắc chắn muốn xóa vĩnh viễn các mục đã chọn? Hành động này không thể hoàn tác!');">
                            <i class="fa fa-recycle me-2"></i> Xóa vĩnh viễn các mục đã chọn
                        </button>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<script>
    // Script đơn giản để chọn tất cả checkbox
    document.getElementById('selectAll').addEventListener('change', function() {
        var checkboxes = document.querySelectorAll('.item-check');
        for (var checkbox of checkboxes) {
            checkbox.checked = this.checked;
        }
    });
</script>