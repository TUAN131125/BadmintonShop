@model IEnumerable<BadmintonShop.Web.Areas.Admin.ViewModels.ProductListVM>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Product List";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
        <h5 class="mb-0 fw-bold text-primary">
            <i class="fa-solid fa-box"></i> Product Management
        </h5>
        <a class="btn btn-primary btn-sm" asp-action="Create">
            <i class="fa fa-plus"></i> Add New Product
        </a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 300px; min-width: 250px;">Product Name</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Categories</th>
                        <th>Status</th>
                        <th class="text-end" style="width: 180px; min-width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var p in Model)
                        {
                            <tr>
                                <td style="max-width: 300px; white-space: normal; word-wrap: break-word;">
                                    <div class="d-flex align-items-center gap-3">
                                        @if (!string.IsNullOrEmpty(p.ImageUrl))
                                        {
                                            <img src="@p.ImageUrl" class="rounded border flex-shrink-0" style="width: 50px; height: 50px; object-fit: cover;" alt="@p.Name" />
                                        }
                                        else
                                        {
                                            <div class="rounded border d-flex align-items-center justify-content-center bg-light text-muted flex-shrink-0" style="width: 50px; height: 50px;">
                                                <i class="fa fa-image"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark" style="font-size: 0.95rem; line-height: 1.3;">@p.Name</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@p.Brand</span>
                                </td>
                                <td>
                                    @if (p.SalePrice.HasValue && p.SalePrice > 0)
                                    {
                                        <div class="text-danger fw-bold">@p.SalePrice.Value.ToString("N0") ₫</div>
                                        <div class="text-decoration-line-through text-muted small">@p.BasePrice.ToString("N0") ₫</div>
                                    }
                                    else
                                    {
                                        <div class="fw-bold text-dark">@p.BasePrice.ToString("N0") ₫</div>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@p.CategoryName</small>
                                </td>
                                <td>
                                    @if (p.IsActive)
                                    {
                                        <span class="badge bg-success bg-opacity-75">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-75">Hidden</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a class="btn btn-sm btn-info text-white" asp-action="Detail" asp-route-id="@p.Id" title="View Details">
                                            <i class="fa fa-eye"></i>
                                        </a>

                                        <a class="btn btn-sm btn-warning text-dark" asp-controller="ProductVariant" asp-action="Index" asp-route-productId="@p.Id" title="Manage Variants">
                                            <i class="fa fa-layer-group"></i>
                                        </a>

                                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id" title="Edit">
                                            <i class="fa fa-pencil-alt"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@p.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this product?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                No products found. Click "Add New Product" to start.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>