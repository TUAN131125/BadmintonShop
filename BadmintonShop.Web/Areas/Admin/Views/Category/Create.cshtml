@model BadmintonShop.Web.Areas.Admin.ViewModels.CategoryVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header">
        <i class="fa fa-plus"></i> Create Category
    </div>

    <div class="card-body">

        <form asp-area="Admin"
              asp-controller="Category"
              asp-action="Create"
              method="post">

            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Category Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ParentId" class="form-label">Parent Category</label>
                <select asp-for="ParentId" class="form-select">
                    <option value="">-- Root --</option>
                    @foreach (var p in ViewBag.Parents)
                    {
                        <option value="@p.Id">@p.Name</option>
                    }
                </select>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    Save
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Back
                </a>
            </div>

        </form>

    </div>
</div>
