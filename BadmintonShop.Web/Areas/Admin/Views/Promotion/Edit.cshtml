@model BadmintonShop.Core.Entities.Promotion
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Cập nhật Khuyến Mãi";
}

<div class="card shadow-sm" style="max-width: 800px; margin: auto;">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 fw-bold">Cập nhật: @Model.Name</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="row mb-3">
                <div class="col-md-12">
                    <label class="form-label fw-bold">Tên chương trình</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày bắt đầu</label>
                    <input asp-for="StartDate"
                           class="form-control"
                           type="datetime-local"
                           step="1"
                           asp-format="{0:yyyy-MM-ddTHH:mm:ss}" />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày kết thúc</label>
                    <input asp-for="EndDate"
                           class="form-control"
                           type="datetime-local"
                           step="1"
                           asp-format="{0:yyyy-MM-ddTHH:mm:ss}" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3 bg-light p-3 rounded mx-0">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Loại giảm giá</label>
                    <select asp-for="IsPercent" class="form-select">
                        <option value="true">Giảm theo phần trăm (%)</option>
                        <option value="false">Giảm tiền mặt (VNĐ)</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Giá trị giảm</label>
                    <input asp-for="DiscountValue" class="form-control" type="number" min="0" required />
                </div>
            </div>

            <div class="form-check mb-4">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label class="form-check-label">Đang kích hoạt</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
            </div>
        </form>
    </div>
</div>